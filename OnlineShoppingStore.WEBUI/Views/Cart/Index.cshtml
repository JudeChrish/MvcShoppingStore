@model OnlineShoppingStore.WEBUI.Models.CartIndexViewModel
    @{ 
        ViewBag.Title = "Shopping Store: Your Cart";
    }
<h2>Cart</h2>
<table class="table">
    <thead>
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th class="text-right">Price</th>
            <th class="text-right">Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.cart.GetAllItems())
            {
                <tr>
                    <td class="text-center">@line.Product.Description.Substring(0,50)</td>
                    <td class="text-center">@line.Quantity</td>
                    <td class="text-right">@line.Product.Price</td>
                    <td class="text-right">@line.Product.Price*@line.Quantity.ToString("c")</td>
                </tr>
            }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">@Model.cart.ComputeTotalValue().ToString("c")</td>
        </tr>
    </tfoot>
</table>
<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUlr">Continue shopping </a>
</div>

