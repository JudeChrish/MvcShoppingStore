@model OnlineShoppingStore.WEBUI.Models.ProductListViewModel

@{
    ViewBag.Title = "AllProducts";
}

<h2>AllProducts</h2>
@foreach (var p in Model.Products)
{
    @Html.Partial("ProductDetailsView", p);
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("AllProducts", new { CurrCategory = Model.CurrentCategory, page = x }))

</div>