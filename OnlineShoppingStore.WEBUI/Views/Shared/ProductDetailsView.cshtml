@model OnlineShoppingStore.Domain.Entities.Product

<div class="well">
    <h3><strong>@Model.ProductName</strong></h3>
    <span class="pull-right label label-primary"> <h4>@Model.Price.ToString("c")</h4></span>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ProductId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Add to Cart"/>
        </div>
    }
    <span class="lead">@Model.Description</span>
    <br />
    <span class="pull-left label label-default">@Model.Category</span>
</div>

